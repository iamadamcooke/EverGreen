<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SpendingReportActivity" >

    <TextView
        android:id="@+id/spendingReportTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:text="Title" />
    
    <RelativeLayout 
                android:layout_height="wrap_content"
                android:id="@+id/foodLayout"
                android:layout_below="@id/spendingReportTitle"
                android:layout_width="fill_parent" 
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
    
    <TextView
        android:id="@+id/foodLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="35dp"
        android:text="Food" />
    <TextView
        android:id="@+id/foodAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="35dp"
        android:text="$0.00" />
    
    </RelativeLayout>
    
    <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="fill_parent" 
                android:layout_marginTop="5dp"
                android:id="@+id/rentLayout"
                android:layout_below="@id/foodLayout"
                android:orientation="horizontal">
    
    <TextView
        android:id="@+id/rentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="35dp"
        android:text="Rent" />
    <TextView
        android:id="@+id/rentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="35dp"
        android:text="$0.00" />
    
    </RelativeLayout>
    
    <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="fill_parent" 
                android:layout_marginTop="5dp"
                android:id="@+id/entLayout"
                android:layout_below="@id/rentLayout"
                android:orientation="horizontal">
    
    <TextView
        android:id="@+id/entertainmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="35dp"
        android:text="Entertainment" />
    <TextView
        android:id="@+id/entertainmentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="35dp"
        android:text="$0.00" />
    
    </RelativeLayout>
    
     <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="fill_parent" 
                android:layout_marginTop="5dp"
                android:id="@+id/clothingLayout"
                android:layout_below="@id/entLayout"
                android:orientation="horizontal">
    
    <TextView
        android:id="@+id/clothingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="35dp"
        android:text="Clothing" />
    <TextView
        android:id="@+id/clothingAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="35dp"
        android:text="$0.00" />
    
    </RelativeLayout>
    
      <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="fill_parent" 
                android:layout_marginTop="5dp"
                android:id="@+id/otherLayout"
                android:layout_below="@id/clothingLayout"
                android:orientation="horizontal">
    
    <TextView
        android:id="@+id/otherLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="35dp"
        android:text="Other" />
    <TextView
        android:id="@+id/otherAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="35dp"
        android:text="$0.00" />
    
    </RelativeLayout>
    
       <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" 
                android:layout_marginTop="5dp"
                android:id="@+id/totalLayout"
                android:layout_below="@id/otherLayout"
                android:orientation="horizontal">
    
    <TextView
        android:id="@+id/totalLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="35dp"
        android:text="Total" />
    <TextView
        android:id="@+id/totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="35dp"
        android:text="$0.00" />
    
    </RelativeLayout>
    

</RelativeLayout>
